<%-include('../layouts/header.ejs')%>
<div class="col-md-2"></div>
<div class="col-md-8">
    <div class="row mt-4">
        <div class="col-md-12 text-center">
            <p class="m-3">Please enter author details to add an author</p>
            <form action="/author/add" method="POST">
                <div class="row">
                    <div class="col">
                        <input name="name" class="form-control" type="text" autocomplete="off" placeholder="Author name"
                            required>
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col">
                        <textarea name="desc" placeholder="About author | Description" rows="5" class="form-control"
                            required></textarea>
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col">
                        <input name="image_url" class="form-control" type="url" autocomplete="off"
                            placeholder="Image url" required>
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col text-center">
                        <input type="submit" class="btn btn-primary" value="Add author">
                    </div>
            </form>
        </div>
    </div>
</div>
<%-include('../layouts/footer.ejs')%>
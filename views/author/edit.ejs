<%-include('../layouts/header.ejs')%>
<div class="col-md-2"></div>
<div class="col-md-8">
    <div class="row mt-4">
        <div class="col-md-4 align-items-center text-center">
            <img src="<%=author.imageUrl%>">
        </div>
        <div class="col-md-8 text-center">
            <p class="m-3">Please enter author details to add an author</p>
            <form action="/author/edit" method="POST">
                <div class="row">
                    <div class="col">
                        <input name="name" class="form-control" type="text" autocomplete="off" placeholder="Author name"
                            value="<%=author.name%>" required>
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col">
                        <textarea name="description" placeholder="About author | Description" rows="5" class="form-control"
                            required><%=author.description%></textarea>
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col">
                        <input name="image_url" class="form-control" type="url" autocomplete="off"
                            placeholder="Image url" value="<%=author.imageUrl%>" required>
                        <input type="hidden" name="id" value="<%=author.id%>">
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col text-center">
                        <input type="submit" class="btn btn-primary" value="Update">
                        <a class="btn btn-secondary" href="/author/list">Cancel</a>
                    </div>
            </form>
        </div>
    </div>
</div>
<%-include('../layouts/footer.ejs')%>